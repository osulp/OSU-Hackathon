<%= simple_form_for @request, :url => "/request/#{@request.id}", :html => { :class => "form-horizontal tasi-form" } do |f| %>

  <div class="col-md-12">
    <section class="panel">
      <header class="panel-heading">
        CONFERENCE / ACTIVITY DETAILS
      </header>
      <div class="panel-body">
        <div class="form-group">
          <label class="col-sm-2 col-sm-2 control-label">Travelers' Name</label>
          <div class="col-sm-10">
            <%= current_user.display_name %>
          </div>
        </div>
        <div class="form-group">
          <label class="col-sm-2 col-sm-2 control-label">Telephone</label>
          <div class="col-sm-10">
            <input type="text" class="form-control" name="request[telephone_number]" id="request_telephone_number" placeholder="Enter your preferred telephone number">
          </div>
        </div>
        <div class="form-group">
          <label class="col-sm-2 col-sm-2 control-label">Unit/Department</label>
          <div class="col-sm-10">
            <%= @departments["OSULP-Admin"]["org"] %>
            <select class="form-control m-b-10" name="request[department]">
              <option>Department</option>
              <option>Department</option>
              <option>Department</option>
              <option>Department</option>
            </select>
          </div>
        </div>
        <div class="form-group">
          <label class="col-sm-2 col-sm-2 control-label">Destination City</label>
          <div class="col-sm-4">
            <input type="text" class="form-control" name="request[destination_city]" id="request_destination_city" placeholder="City, State">
          </div>
        </div>
        <div class="form-group">
          <label class="col-sm-2 col-sm-2 control-label">Conference/Activity</label>
          <div class="col-sm-10">
            <select class="form-control m-b-10 conference" name="request[conference]">
              <option value="">-Select One- </option>
              <option value="OLA Annual Conference">OLA Annual Conference</option>
              <option value="Oregon ACRL">Oregon ACRL</option>
              <option value="Online NW">Online NW</option>
              <option value="Orbis-Cascade Alliance Annual Meeting">Orbis-Cascade Alliance Annual Meeting</option>
              <option value="OLA SSD Annual Conference">OLA SSD Annual Conference</option>
              <option value="Other">Other</option>
            </select>

            <script type="text/javascript">
$(document).ready(function(){
  $("input.conference-other").hide();

  $(document).on("change", "select.conference", function(e){
    if($(this).val() == 'other'){
      $("input.conference-other").slideDown();
    } else {
      $("input.conference-other").slideUp();
    }
  });
});

            </script>
            <input type="text" class="form-control conference-other" name="request[conference_other]" id="request_conference" placeholder="or, Enter the conference name here">
          </div>
        </div>
        <div class="form-group">
          <label class="col-sm-2 col-sm-2 control-label">Date(s)</label>
          <div class="col-sm-4">
            <input type="text" class="form-control" name="request[dates]" placeholder="From Date - To Date">
            <script type="text/javascript">
$(function() {
  $('input[name="request[dates]"]').daterangepicker();
});
            </script>
          </div>
        </div>
        <div class="form-group">
          <label class="col-sm-2 col-sm-2 control-label">Level(s) of Involvement</label>
          <div class="col-sm-10">
            <select class="form-control m-b-10" name="request[involvement_level]">
              <option value="attendee">Attendee</option>
              <option value="presenter">Presenter</option>
              <option value="committee_member">Committee Member</option>
              <option value="committee_chair">Committee Chair</option>
              <option value="committee_officer">Committee Officer</option>
              <option value="na">Not Applicable</option>
            </select>
          </div>
        </div>
        <div class="form-group">
          <label class="col-sm-2 col-sm-2 control-label">Webinar</label>
          <div class="col-sm-10">
            <div class="input-group m-b-10">
              <span class="input-group-addon">
                <input style="margin-left: 0;" type="checkbox" name="request[webinar]"> </label>
              </span>
              <input type="text" class="form-control" name="request[webinar_url]" placeholder="Enter the webinar URL here" />
            </div>
          </div>
        </div>
        <div class="form-group">
          <label class="col-sm-2 col-sm-2 control-label">Directed Travel</label>
          <div class="col-sm-10">
            <div class="input-group m-b-10">
              <span class="input-group-addon">
                <input style="margin-left: 0;" type="checkbox" name="request[directed_travel]"> </label>
              </span>
              <span class="form-control" style="background-color: #F4F4F4; color: #777;">Directed travel is reimbursed at 100%, and is directed by your departmental supervisor.</span>
            </div>
          </div>
        </div>
        <div class="form-group">
          <label class="col-sm-2 col-sm-2 control-label">Release Time Only</label>
          <div class="col-sm-10">
            <div class="input-group m-b-10">
              <span class="input-group-addon">
                <input style="margin-left: 0;" type="checkbox" name="request[release_time]"> </label>
              </span>
              <span class="form-control" style="background-color: #F4F4F4; color: #777;">No expenses required.</span>
            </div>
          </div>
        </div>
        <div class="form-group">
          <label class="col-sm-2 col-sm-2 control-label">Reason</label>
          <div class="col-sm-10">
            <textarea class="form-control" name="request[reason]" id="request_reason"></textarea>
            <p class="help-block">Briefly describe what you expect to gain/contribute from attending this conference/training.</p>
          </div>
        </div>
      </div>
    </section>
  </div>
  <!-- Travel Cost Estimates -->
  <div class="col-md-12">
    <section class="panel">
      <header class="panel-heading">
        TOTAL ESTIMATED COST OF TRIP
      </header>
      <div class="panel-body">
        <div class="form-group">
          <label class="col-sm-2 col-sm-2 control-label">Transportation</label>
          <div class="input-group m-b-10 col-sm-6">
            <span class="input-group-addon">$</span>
            <input type="text" class="form-control" name="request[transportation_fees]" id="request_transportation_fees" placeholder="">
          </div>
        </div>
        <div class="form-group">
          <label class="col-sm-2 col-sm-2 control-label">Registration</label>
          <div class="input-group m-b-10 col-sm-6">
            <span class="input-group-addon">$</span>
            <input type="text" class="form-control" name="request[registration_fees]" id="request_registration_fees" placeholder="">
          </div>
        </div>
        <div class="form-group">
          <label class="col-sm-2 col-sm-2 control-label">Meals</label>
          <div class="input-group m-b-10 col-sm-6">
            <span class="input-group-addon">$</span>
            <input type="text" class="form-control" name="request[meals_fees]" id="request_meals_fees" placeholder="">
          </div>
        </div>
        <div class="form-group">
          <label class="col-sm-2 col-sm-2 control-label">Lodging</label>
          <div class="input-group m-b-10 col-sm-6">
            <span class="input-group-addon">$</span>
            <input type="text" class="form-control" name="request[lodging_fees]" id="request_lodging_fees" placeholder="">
          </div>
        </div>
        <div class="form-group">
          <label class="col-sm-2 col-sm-2 control-label">Other</label>
          <div class="input-group m-b-10 col-sm-6">
            <span class="input-group-addon">$</span>
            <input type="text" class="form-control" name="request[other_fees]" id="request_other_fees" placeholder="">
          </div>
        </div>
        <div class="form-group">
          <label class="col-sm-2 col-sm-2 control-label">Total Estimated Costs</label>
          <div class="input-group m-b-10 col-sm-6">
            <span class="input-group-addon">$</span>
            <input type="text" class="form-control" name="request[total_fees]" id="request_total_fees" placeholder="">
          </div>
        </div>
      </div>
    </section>
  </div>
  <!-- Travel Cost Estimates -->

  <!-- Financial Summary -->
  <div class="col-md-12">
    <section class="panel">
      <header class="panel-heading">
        FINANCIAL SUMMARY
      </header>
      <div class="panel-body">
        <div class="form-group">
          <label class="col-sm-2 col-sm-2 control-label">Reimbursement %</label>
          <div class="col-sm-10">
            <input type="text" class="form-control" name="request[reimbursement]" id="request_reimbursement" placeholder="">
          </div>
        </div>
        <div class="form-group">
          <label class="col-sm-2 col-sm-2 control-label">Index to be charged</label>
          <div class="col-sm-10">
            <input type="text" class="form-control" name="request[charged_index]" id="request_charged_index" placeholder="">
          </div>
        </div>
        <div class="form-group">
          <label class="col-sm-2 col-sm-2 control-label">Activity code of the traveler</label>
          <div class="col-sm-10">
            <input type="text" class="form-control" name="request[activity_code]" id="request_activity_code" placeholder="">
          </div>
        </div>
        <div class="form-group">
          <label class="col-sm-2 col-sm-2 control-label">Manager</label>
          <div class="col-sm-10">
            <input type="text" class="form-control" name="request[manager]" id="request_manager" placeholder="">
          </div>
        </div>
      </div>
    </section>
  </div>
  <!-- Financial Summary -->
  <div class="col-md-12">
    <section>
      <div class="form-group">
        <div class="col-sm-12">
          <button type="submit" class="btn btn-info">Submit</button>
        </div>
      </div>
    </section>
  </div>
<% end %>
