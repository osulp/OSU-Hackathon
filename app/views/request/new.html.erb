<%= simple_form_for @request, :url => "/request/#{@request.id}", :html => { :class => "form-horizontal tasi-form" } do |f| %>

  <div class="col-md-12">
    <section class="panel">
      <header class="panel-heading">
        CONFERENCE / ACTIVITY DETAILS
      </header>
      <div class="panel-body">
        <div class="form-group">
          <label class="col-sm-2 col-sm-2 control-label">Travelers' Name</label>
          <div class="col-sm-10">
            <%= @current_user.to_s %>
          </div>
        </div>
        <div class="form-group">
          <label class="col-sm-2 col-sm-2 control-label">Telephone</label>
          <div class="col-sm-10">
            <input type="text" class="form-control" name="request[telephone_number]" id="request_telephone_number" placeholder="Enter your preferred telephone number">
          </div>
        </div>
        <div class="form-group">
          <label class="col-sm-2 col-sm-2 control-label">Unit/Department</label>
          <div class="col-sm-10">
            <select class="form-control m-b-10" name="request[department]">
              <option>Department</option>
              <option>Department</option>
              <option>Department</option>
              <option>Department</option>
            </select>
          </div>
        </div>
        <div class="form-group">
          <label class="col-sm-2 col-sm-2 control-label">Destination City</label>
          <div class="col-sm-4">
            <input type="text" class="form-control" name="request[destination_city]" id="request_destination_city" placeholder="City, State">
          </div>
        </div>
        <div class="form-group">
          <label class="col-sm-2 col-sm-2 control-label">Conference/Activity</label>
          <div class="col-sm-10">
            <input type="text" class="form-control" name="request[conference]" id="request_conference" placeholder="Enter the conference name here">
          </div>
        </div>
        <div class="form-group">
          <label class="col-sm-2 col-sm-2 control-label">Date(s)</label>
          <div class="col-sm-4">
            <input type="text" class="form-control" name="request[dates]" placeholder="From Date - To Date">
            <script type="text/javascript">
$(function() {
  $('input[name="request[dates]"]').daterangepicker();
});
            </script>
          </div>
        </div>
        <div class="form-group">
          <label class="col-sm-2 col-sm-2 control-label">Level(s) of Involvement</label>
          <div class="col-sm-10">
            <select class="form-control m-b-10" name="request[involvement_level]">
              <option value="attendee">Attendee</option>
              <option value="presenter">Presenter</option>
              <option value="committee_member">Committee Member</option>
              <option value="committee_chair">Committee Chair</option>
              <option value="committee_officer">Committee Officer</option>
              <option value="other">Other</option>
            </select>
          </div>
        </div>
        <div class="form-group">
          <label class="col-sm-2 col-sm-2 control-label">Directed Travel</label>
          <div class="col-sm-10">
            <input type="checkbox" class="form-control" name="request[directed_travel]"/>
          </div>
        </div>
        <div class="form-group">
          <label class="col-sm-2 col-sm-2 control-label">Webinar</label>
          <div class="col-sm-10">
            <div class="input-group m-b-10">
              <span class="input-group-addon">
                <input style="margin-left: 0;" type="checkbox" name="request[webinar]"> </label>
              </span>
              <input type="text" class="form-control" name="request[webinar_url]" placeholder="Enter the webinar URL here" />
            </div>
          </div>
        </div>
        <div class="form-group">
          <label class="col-sm-2 col-sm-2 control-label">Release Time Only</label>
          <div class="col-sm-10">
            <div class="input-group m-b-10">
              <span class="input-group-addon">
                <input style="margin-left: 0;" type="checkbox" name="request[release_time]"> </label>
              </span>
              <input type="text" class="form-control" name="" value="No expenses required." disabled="disabled" />
            </div>
          </div>
        </div>
        <div class="form-group">
          <label class="col-sm-2 col-sm-2 control-label">Reason</label>
          <div class="col-sm-10">
            <textarea class="form-control" name="request[reason]" id="request_reason"></textarea>
          </div>
        </div>
      </div>
    </section>
  </div>
  <!-- Travel Cost Estimates -->
  <div class="col-md-12">
    <section class="panel">
      <header class="panel-heading">
        TOTAL ESTIMATED COST OF TRIP
      </header>
      <div class="panel-body">
        <div class="form-group">
          <label class="col-sm-2 col-sm-2 control-label">Transportation $</label>
          <div class="col-sm-10">
            <input type="text" class="form-control" name="request[transportation]" id="request_conference" placeholder="">
          </div>
        </div>
      </div>
    </section>
  </div>
  <!-- Travel Cost Estimates -->

  <div class="form-group">
    <label class="col-sm-2 col-sm-2 control-label"></label>
    <div class="col-sm-10">
      <button type="submit" class="btn btn-info">Submit</button>
    </div>
  </div>
<% end %>
